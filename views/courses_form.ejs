      <label for="department">Department Name: 
    </label>
    <select name="dpt" id="dpt">
      <% if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
            <option name="dpt" id="dpt" value='<%=data.name %>'><%=data.name %></option>
        <%  i++; }) %>
        <% } else{ %>
        <% } %>
    </select>
  </div><br>
  
      <!-- <input class="box" type="text" name="dpt" id="dpt" placeholder="Department Name " required/><br><br> -->
