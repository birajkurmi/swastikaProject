      <h2>Add Criteria</h2>
      <!-- <select class="box" name="dname" id="dname"  required><option>Department Name</option></select><br><br>
       -->
       <label for="student">Student Name: 
      </label>
      <select name="student" id="student">
        <% if(userData.length!=0){
          var i=1;
          userData.forEach(function(data){
          %>
              <option name="student" id="student" value='<%=data.name %>'><%=data.name %></option>
          <%  i++; }) %>
          <% } else{ %>
          <% } %>
      </select><br><br>
