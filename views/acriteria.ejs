      <!-- <input class="box" type="text" name="eligibility" id="eligibility" placeholder="Eligibility " required/><br> -->
      <br>
      <input type="submit" id="submitDetails" name="submitDetails" class="registerbtn" value="Submit" />   <br>
      </form>
      </div>
  
      <div class="main"style="margin-left:20%;">
        <form action="/criteria" method="get" style="padding: 30px; ">
